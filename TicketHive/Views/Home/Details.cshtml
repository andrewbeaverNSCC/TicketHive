@model TicketHive.Models.Concert

@{
    ViewData["Title"] = "Details";
}

<h1>Concert Details</h1>

<div>
    @* <div class="w-50">
        <img src="/concert-photos/@Model.Filename" alt="@Model.Title" class="img-fluid" />
    </div> *@
    <div class="resizable-container" id="resizableBox">

        <img src="@(string.IsNullOrEmpty(Model.Filename) ? "~/concert-photos/placeholder.jpg" : Model.Filename)" alt="@Model.Title" class="img-fluid" />
        <div class="resize-handle"></div>
    </div>
    @* <hr /> *@
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConcertTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcertTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Concerts" asp-action="Edit" asp-route-id="@Model?.ConcertId">Edit</a> |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

<section>
    <h2>Purchases</h2>

    @if (Model.Purchases != null && Model.Purchases.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Purchase Id</th>
                    <th>Tickets</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Card (masked)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var purchase in Model.Purchases)
                {
                    <tr>
                        <td>@purchase.PurchaseId</td>
                        <td>@purchase.NumOfTickets</td>
                        <td>@purchase.Name</td>
                        <td>@purchase.Email</td>
                        <td>@purchase.MaskedCardNumber</td>
                        <td>
                            <a asp-controller="Purchases" asp-action="Details" asp-route-id="@purchase.PurchaseId">Details</a> |
                            <a asp-controller="Purchases" asp-action="Edit" asp-route-id="@purchase.PurchaseId">Edit</a> |
                            <a asp-controller="Purchases" asp-action="Delete" asp-route-id="@purchase.PurchaseId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No purchases for this concert.</p>
    }
</section>
